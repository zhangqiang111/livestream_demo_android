<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <style name="ToolbarNormal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="TitleNormal">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="LiveEndTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#fff</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="LiveEndTitleStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#C6C6C6</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="room_user_details_dialog">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <style name="DividerStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1px</item>
    <item name="android:background">@color/rp_divider_color</item>
  </style>
  <style name="DividerStyleNoHead" parent="DividerStyle">
    <item name="android:layout_marginLeft">@dimen/size45px</item>
  </style>
  <style name="ChangeLeftTextViewStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">47dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
    <item name="android:textColor">@color/rp_text_black</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@color/rp_background_white</item>
    <item name="android:drawableRight">@drawable/rp_arrow_forward</item>
    <item name="android:drawablePadding">10dp</item>
  </style>
  <style name="LoadingProgressStyle" parent="@android:style/Widget.ProgressBar">
    <item name="android:indeterminateDrawable">@drawable/rp_loading_anim</item>
    <item name="android:indeterminateBehavior">repeat</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:layout_width">@dimen/size84px</item>
    <item name="android:layout_height">@dimen/size84px</item>
    <item name="android:indeterminate">false</item>
  </style>
</resources>
